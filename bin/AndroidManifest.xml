<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.gdupt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.edu.gdupt.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.edu.gdupt.ui.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.edu.gdupt.ui.MineActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cn.edu.gdupt.ui.CourseHomeActivity"
            
            android:label="@string/title_activity_course_home"
            android:parentActivityName="cn.edu.gdupt.ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.edu.gdupt.ui.MainActivity" />
        </activity>
    </application>

</manifest>
